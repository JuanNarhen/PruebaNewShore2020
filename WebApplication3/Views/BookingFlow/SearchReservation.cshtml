@model WebApplication3.EntityLayer.Areas.BookingFlow.Booking
@{
    ViewData["Title"] = "SearchReservation";
}

<h1 class="text-center">BUSCAR RESERVA</h1>

<br />
<hr />
<br />

<div class="row justify-content-center">
    <form asp-action="SearchReservation" method="post">
        <div class="form-group">
            Numero de reserva: <input type="text" name="code"/>
        </div>
        <div class="form-group row justify-content-center" >
            <div class="form-group col-sm-3">
                <input type="submit" value="Buscar" class="btn btn-primary btn-sm" />
            </div>
            <div class="form-group col-sm-3">
                <input type="button" value="Volver" onclick="location.href='@Url.Action("Index", "Home")'" class="btn btn-primary btn-sm" />
            </div>
        </div>
    </form>
</div>

<br />
<br />


@if(Model != null)
{
<div class="border text-center">
    <div>
        <span class="strong-txt">C&oacute;digo: </span>@Model.Code
    </div>
    <div>
        <span class="strong-txt">Fecha: </span>@Model.Flight.DepartureDate
    </div>
    @if (Model.Passengers != null)
    {
        @foreach (var i in Model.Passengers)
        {
            <div>
                <span class="strong-txt">Pasajero : </span>@i.Name
            </div>
        }
    }
    <div>
        <span class="strong-txt">Nombre de contacto: </span>@Model.Contact.Name
    </div>
    <div>
        <span class="strong-txt">N&uacute;mero de contacto: </span>@Model.Contact.Phone
    </div>
    <div>
        <span class="strong-txt">Email de contacto: </span>@Model.Contact.Email
    </div>
</div>
}

@if(ViewBag.NullBooking != null)
{
    <div class="alert text-danger">
        @ViewBag.NullBooking
    </div>
}

